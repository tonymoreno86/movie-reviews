<header id="page-header">
  <div id="masthead">
    <h1><%= link_to 'Flix', root_path %></h1>
    <nav>
      <p>
        <% if current_user %>
          <%= link_to current_user.name, current_user %> |
          <%= link_to "Account Settings", edit_user_path(current_user) %> |
          <%= link_to "Sign out", session_path, method: :delete %>
        <% else%>
          <%= link_to "Sign Up", signup_path, class: 'button' %>
          <%= link_to "Sign In", singin_path, class: 'button' %> |
          <%= link_to "Visit Portfolio", "https://tony-devcamp-portfolio.herokuapp.com" %>
        <% end %>
      </p>
    </nav>
  </div>

</header>